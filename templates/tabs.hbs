<div class="tabs-inner component-inner">
	{{> component this}}
	<div class="tabs-widget component-widget clearfix">

    <div class="tabs-navigation">
        <div class="tabs-navigation-inner">
            {{#each _items}}
                <a
                        href="#"
                        class="tabs-navigation-item"
                        id="tab-content-navigation-item-{{@index}}_{{../_id}}"
                        role="button"
                        aria-label="{{{tabTitle}}} {{#if _isVisited}}. Visited{{/if}}"
                        data-id="item-{{@index}}"
                        aria-selected="{{#if @index}}false{{else}}true{{/if}}"
                >
                    <div class="tabs-navigation-item-inner {{#if _isVisited}}visited{{/if}}">
                        {{{tabTitle}}}
                    </div>
                </a>
            {{/each}}
        </div>
    </div>

    <div class="tabs-content-icon icon icon-arrow-down"></div>

	<div class="tabs-content-items">
		<div class="tabs-content-items-inner">
			{{#each _items}}
			<div
					class="tab-content item-{{@index}}{{#if _classes}} {{_classes}}{{/if}}"
					id="tab-content-{{@index}}_{{../_id}}"
					aria-labelledby="tab-content-navigation-item-{{@index}}_{{../_id}}"
			>
				<div class="tab-content-inner">

					{{#if title}}
					<div class="tab-content-item-title">
						<div class="tab-content-item-title-inner accessible-text-block">
							{{{title}}}
						</div>
					</div>
					{{/if}}

					{{#if body}}
					<div class="tab-content-item-body">
						<div class="tab-content-item-body-inner">
							{{{a11y_text body}}}
						</div>
					</div>
					{{/if}}

					{{#if _graphic.src}}
					<div class="tab-content-item-graphic">
						<img class="tab-content-item-graphic-inner" src="{{{_graphic.src}}}" alt="{{{_graphic.alt}}}" tabindex="0"/>
					</div>
					{{/if}}

				</div>
			</div>
			{{/each}}
		</div>
	</div>

	</div>
</div>
